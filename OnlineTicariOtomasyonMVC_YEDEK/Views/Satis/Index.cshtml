﻿@using MvcOnlineTicariOtomasyon.Models.Siniflar;
@model List<SatisHareket>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<br />
<table id="tbl1" class="table table-hover" style="margin-top:20px">
    <thead>
        <tr>
            <th>ID</th>
            <th>Ürün</th>
            <th>Cari</th>
            <th>Personel</th>
            <th>Adet</th>
            <th>Fiyat</th>
            <th>Toplam Tutar</th>
            <th>Tarih</th>
            <th></th> <!-- Güncelleştir için boş başlık -->
            <th></th> <!-- Detay için boş başlık -->
        </tr>
    </thead>
    <tbody>
        @foreach (var x in Model)
        {
            <tr>
                <td>@x.SatisID</td>
                <td>@x.Urun.UrunAd</td>
                <td>@x.Cariler.CariAd @x.Cariler.CariSoyad</td>
                <td>@x.Personel.PersonelAd @x.Personel.PersonelSoyad</td>
                <td>@x.Adet</td>
                <td>@x.Fiyat.ToString("C")</td>
                <td>@x.ToplamTutar.ToString("C")</td>
                <td>@x.Tarih.ToString("dd.MM.yyyy")</td>

                <td>
                    <a href="/Satis/SatisGetir/@x.SatisID" class="btn btn-outline-success btn-sm">
                        Güncelleştir
                    </a>
                </td>
                <td>
                    <a href="/Satis/SatisDetay/@x.SatisID" class="btn btn-outline-info btn-sm">
                        Detay
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a href="/Satis/SatisEkle" class="btn btn-primary ">Yeni Satış Yap</a>

<link href="~/Content/bootstrap.css" rel="stylesheet" />

<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>

<link href="https://cdn.datatables.net/1.10.15/css/dataTables.bootstrap.min.css" rel="stylesheet" />

<link href="https://cdn.datatables.net/responsive/2.1.1/css/responsive.bootstrap.min.css" rel="stylesheet" />

<script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>

<script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap4.min.js "></script>

<script>

    $('#tbl1').dataTable({});

</script>





