﻿@model MvcOnlineTicariOtomasyon.Models.Siniflar.SatisHareket
@{
    ViewBag.Title = "SatisEkle";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<br />
<h2>Satış Ekle</h2>
<br />
@using (Html.BeginForm("SatisEkle", "Satis", FormMethod.Post))
{
    <form class="form-group" method="post">
        @Html.LabelFor(x => x.Urun.UrunAd)
        @Html.DropDownListFor(x => x.UrunID, (List<SelectListItem>
            )ViewBag.urunad1,"Urun Seçiniz", new { @class = "form-control" })
        <br />
        @Html.LabelFor(x => x.Personel.PersonelAd)
        @Html.DropDownListFor(x => x.PersonelID, (List<SelectListItem>
            )ViewBag.personelad1, "Personel Seçiniz", new { @class = "form-control" })
        <br />
        @Html.LabelFor(x => x.Cariler.CariAd)
        @Html.DropDownListFor(x => x.CariID, (List<SelectListItem>
            )ViewBag.cariad1, "Cari Seçiniz", new { @class = "form-control" })
        <br />
        @Html.LabelFor(x => x.Adet)
        @Html.TextBoxFor(x => x.Adet, new { @class = "form-control" })
        <br />
        @Html.LabelFor(x => x.Fiyat)
        @Html.TextBoxFor(x => x.Fiyat, new { @class = "form-control" })
        <br />

        <button class="btn btn-primary">Kaydet</button>
    </form>
}
