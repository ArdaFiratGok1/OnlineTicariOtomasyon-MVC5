﻿@using MvcOnlineTicariOtomasyon.Models.Siniflar
@model List<Urun>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<table id="tbl1" class="table table-hover" style="margin-top:20px">
    <thead>
        <tr>
            <th>ID</th>
            <th>Ürün</th>
            <th>Marka</th>
            <th>Stok</th>
            <th>Alış Fiyatı</th>
            <th>Satış Fiyatı</th>
            <th>Kategori</th>
            <th>Sil</th>
            <th>Güncelle</th>
            <th>Detaylar</th>
        </tr>
    </thead>
    @foreach (var k in Model)
    {
        <tr>
            <td>@k.UrunID</td>
            <td>@k.UrunAd</td>
            <td>@k.Marka</td>
            <td>@k.Stok</td>
            <td>@k.AlisFiyat ₺</td>
            <td>@k.SatisFiyat ₺</td>
            <td>@k.Kategori.KategoriAd</td>
            <td><a href="/Urun/UrunSil/@k.UrunID" class="btn btn-outline-danger">Sil</a></td>
            <td><a href="/Urun/UrunGetir/@k.UrunID" class="btn btn-outline-warning">Güncelle</a></td>
            <td><a href="/UrunDetay/Index/@k.UrunID" class="btn btn-outline-info">Detaylar</a></td>
        </tr>
    }
</table>
<a href="/Urun/YeniUrun" class="btn btn-primary">Ürün Ekle</a>


